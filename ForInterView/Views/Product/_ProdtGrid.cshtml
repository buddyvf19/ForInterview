@model List<DataModels.Products>
<table border="1" style="border-collapse:collapse">
    <thead>
        <tr>
            <th>Delete</th>
            <th>ProductName</th>
            <th>Supplier</th>
            <th>Catagory</th>
            <th>QuantityPerUnit</th>
            <th>UnitPrice</th>
            <th>UnitsInStock</th>
            <th>UnitsOnOrder</th>
            <th>ReorderLevel</th>
            <th>Discontinued</th>
            <th>modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
        <tr>
            <td><input type="checkbox" name="ProductId" value="@item.ProductID"></td>
            <td>@item.ProductName</td>
            <td>@item.SupplierName</td>
            <td>@item.CataGoryName</td>
            <td>@item.QuantityPerUnit</td>
            <td>@item.UnitPrice.ToString("N0")</td>
            <td>@item.UnitsInStock</td>
            <td>@item.UnitsOnOrder</td>
            <td>@item.ReorderLevel</td>
            <th>@item.Discontinued</th>
            <td><input type="button" value="modify" onclick="OpenModify('@item.ProductID')"></td>
        </tr>
        }
    </tbody>
</table>
